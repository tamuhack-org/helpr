generator client {
  provider            = "prisma-client"
  output              = "../generated/prisma"
  importFileExtension = "ts"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id              String       @id @default(cuid())
  name            String
  email           String       @unique
  emailVerified   DateTime?
  image           String?
  admin           Boolean      @default(false)
  updatedTime     DateTime     @updatedAt
  mentor          Boolean      @default(false)
  accounts        Account[]
  roles           EventRoles[]
  sessions        Session[]
  authoredTickets Ticket[]     @relation("AuthoredTickets")
  claimedTickets  Ticket[]     @relation("ClaimedTickets")

  @@index([admin])
  @@index([email])
}

model Ticket {
  id           String    @id @default(cuid())
  authorName   String
  issue        String
  location     String
  contact      String
  publishTime  DateTime  @default(now())
  claimedTime  DateTime?
  resolvedTime DateTime?
  claimantId   String?
  authorId     String
  isResolved   Boolean   @default(false)
  isClaimed    Boolean   @default(false)
  updatedTime  DateTime  @updatedAt
  eventId      String?
  author       User      @relation("AuthoredTickets", fields: [authorId], references: [id])
  claimant     User?     @relation("ClaimedTickets", fields: [claimantId], references: [id])
  event        Event?    @relation("EventTickets", fields: [eventId], references: [id])

  @@index([isResolved])
  @@index([isClaimed])
}

model Event {
  id          String         @id @default(cuid())
  createdTime DateTime       @default(now())
  updatedTime DateTime       @updatedAt
  isActive    Boolean
  name        String
  url         String?
  bannerText  String?
  roles       EventRoles[]   @relation("EventRoles")
  settings    EventSetting[] @relation("EventSettings")
  tickets     Ticket[]       @relation("EventTickets")
}

model EventSetting {
  id          String   @id @default(cuid())
  eventId     String
  key         String
  value       String
  createdTime DateTime @default(now())
  updatedTime DateTime @updatedAt
  event       Event    @relation("EventSettings", fields: [eventId], references: [id])
}

model EventRoles {
  eventId     String
  userId      String
  mentor      Boolean  @default(false)
  createdTime DateTime @default(now())
  updatedTime DateTime @updatedAt
  event       Event    @relation("EventRoles", fields: [eventId], references: [id])
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([eventId, userId])
}

model VerificationToken {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
